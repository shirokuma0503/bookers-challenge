<!--投稿一覧-->

<div class="body">
  <div class="container">

    <!--サイドバー-->
    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/userinfo', user: @user %> <!--User infoの部分テンプレート-->
        <%= render 'books/newbook', book: @book %> <!--New bookの部分テンプレート-->
      </div>

      <!--投稿一覧-->
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th><!--ProfileImage--></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>


              <!--いいね機能-->
              <td>
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(book, from_page: "index"), method: :delete do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
                    <%= book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(book, from_page: "index"), method: :post do %>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                    <%= book.favorites.count %>
                  <% end %>
                <% end %>
              </td>



              <td>コメント数：<%= book.book_comments.count %></td> <!--each文で使えるのは|book|-->
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>