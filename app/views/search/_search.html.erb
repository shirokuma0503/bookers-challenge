<!--検索部分テンプレート-->

<%= form_with url: "/search", method: :get, local: true do |f| %>
  <%= f.text_field 'search[content]' %>
  <%= f.select 'search[model]',options_for_select({ "User" => "user", "Book" => "book" }) %>
  <%= f.select 'search[method]', "完全一致" => "perfect_match", "前方一致" => "forward_match", "後方一致" => "backward_match", "部分一致" => "partial" %>
  <%= f.submit '検索' %>
<% end %>